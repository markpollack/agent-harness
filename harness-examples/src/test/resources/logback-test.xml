<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Our code at INFO -->
    <logger name="org.springaicommunity.agents.harness" level="INFO"/>

    <!-- Quiet down noisy libraries -->
    <logger name="org.springframework.ai" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.core" level="WARN"/>
    <logger name="org.zeroturnaround" level="WARN"/>
    <logger name="reactor" level="WARN"/>
    <logger name="io.micrometer" level="WARN"/>
    <logger name="com.github.victools" level="WARN"/>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
